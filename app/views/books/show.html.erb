<h1><%= @book.title %></h1>

<p><%= @book.author %></p>
<p><%= @book.genre %></p>
<p><%= @book.price %></p>
<p><%= @book.published_date %></p>

<ul>
    <li><%= link_to "Edit", edit_book_path(@book) %></li>
    <li><%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: "Are you sure?" } %></li>
    <li><%= link_to "Home", root_path %></li>
</ul>